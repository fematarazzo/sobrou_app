<div class="message-container" id="message-<%= message.id %>">
  <% if message.user.owner? %>
    <i class="author">
      <span>Restaurante</span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
  <% else %>
    <i class="author">
      <span> <%= cl_image_tag current_user.photo.key, width: 25, height: 25, class:"rounded"%> <%= message.user.first_name %> <%= message.user.last_name %></span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
  <% end %>
  <p><%= message.content %></p>
</div>
