<div class="banner-g" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.squarespace-cdn.com/content/v1/5616ae99e4b03dd528e477db/1452867212711-Y4RX5LUZJ0TJVA8J24N0/ke17ZwdGBToddI8pDm48kFWxnDtCdRm2WA9rXcwtIYR7gQa3H78H3Y0txjaiv_0fDoOvxcdMmMKkDsyUqMSsMWxHk725yiiHCCLfrh8O1z5QPOohDIaIeljMHgDF5CVlOqpeNLcJ80NK65_fV7S1UcTSrQkGwCGRqSxozz07hWZrYGYYH8sg4qn8Lpf9k1pYMHPsat2_S1jaQY3SwdyaXg/BlazingHearthPizza_121215_-2184V2.jpg?format=1500w');">
  <div class="container mt-4">
    <div class="card-login m-10 p-3 card-border-login align-center">
      <h2>Cadastre aqui:</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      label: "Nome",
                      input_html: { autocomplete: "first name" } %>
          <%= f.input :last_name,
                      required: true,
                      label: "Sobrenome",
                      input_html: { autocomplete: "last name" } %>
          <%= f.input :phone,
                      required: true,
                      label: "Telefone",
                      input_html: { autocomplete: "phone" } %>
          <%= f.label :birthday, as: "Data de nascimento", class:"my-4 mr-4" %>
          <%= f.date_field :birthday,
                      required: true,
                      label: "Data de aniversÃ¡rio",
                      input_html: { autocomplete: "birthday" } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      label: "Senha",
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      label: "Confirme sua senha",
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :photo, label: "Escolha uma foto", as: :file %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Cadastrar", class:"btn btn-flat" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
