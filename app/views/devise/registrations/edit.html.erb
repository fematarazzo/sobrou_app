<div class="container mt-4">

  <h2>Editar usuário</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :first_name,
                  label: "Nome",
                  required: true,
                  input_html: { autocomplete: "first name" } %>

      <%= f.input :last_name,
                  required: true,
                  label: "Sobrenome",
                  input_html: { autocomplete: "last name" } %>
      <%= f.input :phone,
                  required: true,
                  label: "Telefone",
                  input_html: { autocomplete: "phone" } %>
      <%= f.label :birthday, as: "Data de nascimento", class:"my-4 mr-4" %>
      <%= f.date_field :birthday,
                  required: true,
                  label: "Data de aniversário",
                  input_html: { autocomplete: "birthday" } %>
      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  label: "Senha",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  label: "Confirme sua senha",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  label: "Senha atual",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :photo, label: "Escolha uma foto", as: :file %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Atualizar dados", class:"btn btn-flat" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>

</div>
