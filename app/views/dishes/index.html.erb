<nav class="navbar fixed-top navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
        Sobrou
      <% end %>
  <div class="nav-search">
    <%= simple_form_for :search, url: dishes_path, defaults: {label: false}, method: :get do |f| %>
      <div class="search-form-control-nav form-group">
        <div>
          <%= f.input :address, input_html: { class:"form-control string required" }, label: false, placeholder: "Insira um endereço" %>
          <%= f.button :submit, "Buscar", class:"btn btn-flat-nav" %>
        </div>
      </div>
    <% end %>
  </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <% if current_user.owner? %>
            <li class="nav-item">
              <%= link_to "Gerenciar meus restaurantes", restaurants_path, class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item">
              <%= link_to "Meu Perfil", profile_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <%= cl_image_tag current_user.photo.key, class: "avatar", 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-4">

  <div class="row">

    <div class="col-7">
<!-- # Iteracao sobre cada um dos pratos -->
      <div class="row">
        <% if @dishes.present? %>
          <h1>Pratos disponíveis próximos a você</h1>
          <p>Aqui embaixo você encontra os pratos disponibilizados por restaurantes próximos a você</p>
          <% @dishes.each do |dish| %>
            <div class="card m-2 card-main card-border col-5" style="width: 100%">
              <div class="card-image">
                <%= cl_image_tag dish.photo.key, class:"card-img-top mt-2" %>
              </div>
  <!--  #corpo com texto do card -->
              <div class="card-body">
                <%= link_to dish_path(dish), class:"card-link card-title" do %>
                  <h5 class="card-title"> <%= dish.name %></h5>
                <% end %>
                <p class="card-text"> R$<%= dish.price %></p>
              </div>
            </div>
          <% end %>
        <% else %>
        <hr>
        <h2>Não temos pratos deste tipo próximos a você</h2>
        <% end %>
      </div>
    </div>
  </div>
</div>


